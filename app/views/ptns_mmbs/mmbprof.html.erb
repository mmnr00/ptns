<div class="container bg-light">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title" align="center">
        <%= @mmb.name %>
      </h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-12 col-lg-12" align="center"> 
          <% image = @mmb.fotos.where(foto_name: "PTNS MMB").first %>
          <% if image.present? && image.present? && image.picture.present? %>
            <a href="<%="#{image.picture.url}"%>" target="_blank">
              <% if @pdf %>
                <%= wicked_pdf_image_tag(image.picture.url, size: "50x50") %>
              <% else %>
                <%= image_tag(image.picture.url, size: "100x100") %>
              <% end %>
            </a>
          <% else %>
            No photo uploaded
          <% end %>
         </div>

         <div class=" col-md-12 col-lg-12"> 

        <div class="table-responsive">
          
          <table class="table table-striped" id="" width="100%" cellspacing="0">
            <tbody>
              <tr>
                <td><strong>GENDER:</strong></td>
                <td>
                  <%= @mmb.icf %>
                </td>
              </tr>
              
            </tbody>

          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

          
